@{
}

@model Product

<div class="card m-1 p-1">
    <h4>
        @Model.name
        <span class="badge rounded-pill bg-primary text-white float-end"><small>@Model.num_parts parts</small></span>
    </h4>
    <ul>
        <li>Year: @Model.year</li>
        <li>$@Model.price</li>
        <li>Category: @Model.category</li>
        <li>Description: @Model.description</li>
        <li>Primary Color: @Model.primary_color</li>
        <li>Secondary Color: @Model.secondary_color</li>
    </ul>

    <form id=@Model.product_ID method="post" asp-page="/Cart">
        <input type="hidden" asp-for="@Model.product_ID" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn-outline-sucess btn-sm float-end">Add to cart</button>
    </form>
</div>
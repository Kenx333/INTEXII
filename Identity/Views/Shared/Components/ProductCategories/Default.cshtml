@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="Products" asp-route-productCategory="" asp-route-pageNum="">All</a>

    @foreach (string pt in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(pt == ViewBag.SelectedProductCategory ? "btn-primary" : "btn-outline-secondary")" asp-controller="Product" asp-action="Products" asp-route-productCategory="@pt" asp-route-pageNum="1">@pt</a>
    }
</div>